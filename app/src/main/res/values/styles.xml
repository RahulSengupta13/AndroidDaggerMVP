<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/offWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/offWhite</item>
    </style>

    <style name="PrimaryColoredButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="PrimaryColoredBorderlessButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored" />

    <!--TextView Styles-->
    <style name="HeaderLightCenter">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeaderLightLeft">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Header30LightCenter" parent="HeaderLightCenter">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Header26LightCenter" parent="HeaderLightCenter">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Header20LightCenter" parent="HeaderLightCenter">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Header16LightCenter" parent="HeaderLightCenter">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Header16LightLeft" parent="HeaderLightLeft">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyLightCenter">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Body14LightCenter" parent="BodyLightCenter">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyLightLeft">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Body14LightLeft" parent="BodyLightLeft">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AboutBody" parent="Body14LightLeft">
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="NavHeader24Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
